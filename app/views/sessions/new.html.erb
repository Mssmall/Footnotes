<h1>Login</h1>

<%= form_tag login_path do %>

  <%= label_tag :username %>
  <%= username_field_tag :username %>
  <%= label_tag :email %>
  <%= email_field_tag :email %>

<div
  <%= label_tag :password %>
  <% end %>
  <%= password_field_tag :password, nil, :class => 'form-control' %>

  <%= submit_tag "Login" %>
<% end %>
