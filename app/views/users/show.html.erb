<div class="userinfo">
<div class ="row">
  <div class ="col-md-4" col-md-offset-4>
    <div class="profilepicture"
style="background-image: url(<%= @user.photo %>)">
    </div>
  </div>

    <div class ="col-md-5" col-md-offset-4>
      <h1> <%= @user.username %></h1>
<p> </p>

<%= form_for @user do |f| %>
<fieldset>
<%= f.label :club_id %>
<%= f.select :club_id, Club.pluck(:name, :id), :include_blank => true %>
</fieldset>
<%= f.submit "Save changes", :class => 'profile btn btn-success'%>
<% end %>

<div class="controls">
  <%= link_to 'Edit user', edit_user_path(@user) %>
  <%= button_to 'Delete user', @user, :method => 'delete', :data => { :confirm => 'You sure?'} %>
</div>
    </div>
  </div>
</div>

<div class="block_1"></div> <hr />
<div class="rectangle">
<% @user.posts.each do |post| %>
<div class="posts panel panel-default">
  <ul>
    <h4>Message</h4>
    <li><%= post.message %></li>
    <li><%= post.created_at.strftime '%B %d, %H:%M' %></li>
    <div class="author">
    <%= "-#{post.user.try(:username)}" %>
    </div>
    <% post.comments.each do |pc| %>
      <div class="comment panel panel-default">
        <ul>
          <li><%= pc.note %></li>
            <div class="username">
                <%= "-#{pc.user.username} posted #{time_ago_in_words(post.created_at)} ago" %>
            </div>
        </ul>
      </div>
    <% end %>
  </ul>
</div>
</div>
<% end %>
