<div class="panel-heading">
  <h1>Posts</h1>
</div>

<% @posts.each do |post| %>
  <div class="posts panel panel-default">
    <ul>
      <li><%= post.message %></li>
      <% post.comments.each do |pc| %>
        <div class="comment panel panel-default">
          <ul>
            <li><%= pc.note %></li>
              <div class="username">
                <%= "-#{pc.user.username}" %>
              </div>
          </ul>
        </div>
      <% end %>
    </ul>
  </div>
<% end %>
