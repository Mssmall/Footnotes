<div class="panel-heading">
  <h1>All Posts</h1>
</div>

<div class="messagebox">
<%= form_for(Post.new)do |f| %>
<div class="form-group">
  <fieldset>
  <%= f.label :message %>
  <%= f.text_field :message, :class => 'form-control' %>
  </fieldset>
</div>
<div class="form-group" id="choice">
  <fieldset>
  <%= f.label :club_id %>
  <%= f.select :club_id, Club.pluck(:name, :id), :include_blank => true %>
  </fieldset>
</div>

<div class="form-group" id="choice">
  <fieldset>
  <%= f.label :user_id %>
  <%= f.select :user_id, User.pluck(:username, :id), :include_blank => true %>
  </fieldset>
</div>

<div class="subbut">
<%= f.submit "Add new post"%>
</div>
<% end %>
</div>
<br>
<br>
<% @posts.each do |post| %>
  <div class="posts panel panel-default">
    <ul>
      <li><%= post.message %></li>
      <div class="author">
      <%= "-#{post.user.try(:username)}" %>
      </div>
      <%= form_for Comment.new do |f| %>
        <%= hidden_field_tag 'comment[post_id]', post.id %>
        <%= f.label :note %>
        <%= f.text_area :note %>
        <%= f.submit %>
      <% end %>
      <% post.comments.each do |pc| %>
        <div class="comment panel panel-default">
          <ul>
            <li><%= pc.note %></li>
              <div class="username">
                <%= "-#{pc.user.username}" %>
              </div>
          </ul>
        </div>
      <% end %>
    </ul>
  </div>
<% end %>
